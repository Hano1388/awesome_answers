<% if user_signed_in? && can?(:like, @question) %>
  <% if like %>
      <%= link_to fa_icon('thumbs-up lg'), question_like_path(@question, like),
      method: :delete,
      remote: :true %>
  <% else %>
    <%= link_to fa_icon('thumbs-o-up lg'), question_likes_path(@question),
    method: :post,
    remote: :true %>
  <% end %>
<% end %>

(<%= pluralize @question.likes.count, 'like' %>)
